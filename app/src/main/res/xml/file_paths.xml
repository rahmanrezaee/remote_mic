<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internal storage files directory -->
    <files-path
        name="internal_files"
        path="." />

    <!-- External storage app-specific files -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- External cache -->
    <external-cache-path
        name="external_cache"
        path="." />

    <!-- Shared external storage (Android/data/com.your.app/) -->
    <cache-path
        name="cache"
        path="." />

    <!-- Public downloads folder (⚠️ requires MANAGE_EXTERNAL_STORAGE from Android 11) -->
    <external-path
        name="external"
        path="Download/" />
</paths>
